rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isSignedIn() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Existing rules for your collections
    match /sales/{saleId} {
      allow read, write: if isSignedIn();
    }
    
    match /expenses/{expenseId} {
      allow read, write: if isSignedIn();
    }
    
    match /payments/{paymentId} {
      allow read, write: if isSignedIn();
    }
    
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // üîç NEW: Audit logs rules
    match /audit_logs/{logId} {
      // Allow authenticated users to read audit logs
      // You can restrict this to admins only if needed
      allow read: if isSignedIn();
      
      // Allow creating audit logs (the app will create them)
      allow create: if isSignedIn() && 
                      request.resource.data.user.uid == request.auth.uid;
      
      // IMPORTANT: Nobody can update or delete audit logs
      // This ensures audit trail integrity
      allow update: if false;
      allow delete: if false;
    }
    
    // Optional: More restrictive audit logs (admin-only read access)
    // Uncomment this and comment out the above if you want only admins to view logs
    /*
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow create: if isSignedIn() && 
                      request.resource.data.user.uid == request.auth.uid;
      allow update: if false;
      allow delete: if false;
    }
    */
  }
}